#!/bin/sh

# Setup command $1 as an alternative to $2 (if $1 is present)
set_alt() {
	[ -x "$(command -v "$1")" ] && alias "$2"="$1"
}

# Sets up $1 as an alternative to $2 if and only if:
# 1. $1 is present in the system
# 2. $2 is NOT present in the system
set_alt_exclusive() {
	[ ! -x "$(command -v "$2")" ] && \
		set_alt "$1" "$2"
}

set_alt_exclusive nvim vim
set_alt_exclusive nvim vi
set_alt_exclusive yt-dlp youtube-dl
set_alt eza ls

alias "v"="$EDITOR"
alias "e"="$EDITOR"

# Shorten commands
alias "g"="git"
alias "ga"="git add -A"
alias "gac"="git add -A && git commit"
alias "gap"="git add -p"
alias "gco"="git commit"
alias "gst"="git status"
alias "p"="sudo pacman"
alias "ll"="ls -l"
alias "la"="ls -la"

# Verbosity and settings that you pretty much just always are going to want.
alias cp="cp -iv" 
alias mv="mv -iv" 
alias rm="rm -vI" 
alias bc="bc -ql" 
alias rsync="rsync -vrPlu" 
alias mkdir="mkdir -v" 
alias yt="yt-dlp --embed-metadata -i" 
alias ytv="yt -S res,ext:mp4:m4a --recode mp4" 
alias yta="yt -x -f bestaudio/best --audio-format mp3" 
alias ytt="yt --skip-download --write-thumbnail" 
alias ffmpeg="ffmpeg -hide_banner"
alias stow="stow -v"
# Only do this if there are no other aliases for ls
[ -z "$(alias ls)" ] && alias ls="ls --color=auto --group-directories-first -h"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
