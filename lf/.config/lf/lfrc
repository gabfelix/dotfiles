set smartcase true

cmd mkdir $mkdir -p "$@"
cmd touch $touch "$@"

map <c-n> push :mkdir<space>""<left>
map <c-t> push :touch<space>""<left>
map D delete
# rename (keep only extension)
map R :rename; cmd-delete-home

# Shortcuts
map gh cd ~
map gc cd ~/.config
map gd cd ~/dl
map gD cd ~/doc
map gi cd ~/pic
map gp cd ~/pic

#set icons

# Image previews
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

cmd open &{{
    case $(file --mime-type -bL -- "$f") in
        text/*|application/json)
            lf -remote "send $id \$$EDITOR \$fx" ;;
        image/*)
            imv $fx ;;
        audio/*)
            mpv --no-terminal $fx ;;
        video/*)
            mpv --no-terminal "$f" ;;
        application/pdf|application/epub+zip)
            zathura "$f" ;;
        *)
            for f in $fx; do
                xdg-open "$f" > /dev/null 2>&1 &
            done ;;
    esac
}}
