#!/usr/bin/env bash

search_dirs="$HOME/dev"

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find $search_dirs -mindepth 1 -maxdepth 1 -type d | wmenu -p "Sessionize:" -i -l 5)
fi

[ -z "$selected" ] && exit 0

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exec ${TERMINAL:-kitty} -e "tmux" "attach" "-t" "$selected_name"
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
    exec ${TERMINAL:-kitty} -e "tmux" "attach" "-t" "$selected_name"
fi

if [[ -z $TMUX ]]; then
    exec ${TERMINAL:-kitty} -e "tmux" "attach" "-t" "$selected_name"
else
    exec ${TERMINAL:-kitty} -e "tmux" "switch-client" "-t" "$selected_name"
fi
