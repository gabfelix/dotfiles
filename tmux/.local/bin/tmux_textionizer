#!/usr/bin/env bash
[ ! -z "$TMUX" ] && echo "tmux-textionizer does not support running inside tmux" && exit 1

search_dirs="$HOME/Code"

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find $search_dirs -mindepth 1 -maxdepth 1 -type d | fzf --prompt="Sessionize> ")
fi

[ -z "$selected" ] && exit 0

selected_name=$(basename "$selected" | tr . _)

# Check if selected_name corresponds to a valid directory in search_dirs
if [ ! -d "$search_dirs/$selected_name" ]; then
    notify-send "Error" "Invalid directory '${selected_name}'" -t 1500
    exit 1
fi

tmux_running=$(pgrep tmux)

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux attach -t $selected_name
