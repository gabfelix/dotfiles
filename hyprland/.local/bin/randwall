#!/bin/sh

walls="${HOME}/img/wall"

[ -z "$walls" ] && echo "invalid argument" && exit 1

selected="$(find "$walls" -type f | shuf -n 1)"

# TODO: check if "selected" is an image
hyprctl hyprpaper unload all > /dev/null
hyprctl hyprpaper preload "$selected" > /dev/null
hyprctl hyprpaper wallpaper ",$selected" > /dev/null # all monitors
