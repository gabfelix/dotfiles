#!/bin/sh

walls="${HOME}/img/wall"

[ -z "$walls" ] && echo "invalid argument" && exit 1

selected="$(find "$walls" -type f | shuf -n 1)"

# TODO: check if "selected" is an image
hyprctl hyprpaper unload all
hyprctl hyprpaper preload "$selected"
hyprctl hyprpaper wallpaper ",$selected" # all monitors
