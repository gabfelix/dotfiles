#!/bin/sh

change_wpp='ğŸ–¼ï¸ change wallpaper'
reboot='ğŸ”ƒ reboot'
shutdown='ğŸ–¥ï¸ shutdown'
hibernate='ğŸ›Œ hibernate'
suspend='à¶ SUSpend'

case "$(printf "${change_wpp}\n${reboot}\n${hibernate}\n${shutdown}\n${suspend}\n" | rofi -dmenu -i -l 4 -p 'Action: ')" in
	$change_wpp) choose-wallpaper ;;
	$reboot) systemctl reboot -i ;;
	$hibernate) systemctl hibernate -i ;;
	$shutdown) systemctl poweroff -i ;;
	$suspend) systemctl suspend -i ;;
	*) exit 1 ;;
esac
