#!/bin/sh

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*sway(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nğŸšª leave sway\nâ™»ï¸ renew sway\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ sleep\nğŸ“º display off" | wmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	"ğŸšª leave sway") kill -TERM "$(wmpid)" ;;
	"â™»ï¸ renew sway") kill -HUP "$(wmpid)" ;;
	'ğŸ» hibernate') slock systemctl hibernate -i ;;
	'ğŸ’¤ sleep') slock systemctl suspend -i ;;
	'ğŸ”ƒ reboot') systemctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') systemctl poweroff -i ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
